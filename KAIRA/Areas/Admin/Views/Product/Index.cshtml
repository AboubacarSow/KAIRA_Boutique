@model List<GetProductQueryResult>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<table class="table table-borderd table-hover">
    <thead>
        <tr>
            <td>N°</td>
            <td>Ürün Resmi</td>
            <td>Ürün Adı</td>
            <td>Ürün Fiyatı</td>
            <td>Ürün Kategori</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td><img src="@product.ImageUrl" class="img-thumbnail"/></td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category.Name</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" asp-area="Admin" class="btn btn-danger"> Sil</a>
                        <a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" asp-area="Admin" class="btn btn-success"> Güncelle</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<a asp-action="Create" asp-controller="Product"  asp-area="Admin" class="btn btn-outline-primary"> Ekle</a>

@model GetServiceByIdQueryResult
@{
    ViewData["Title"] = "Hizmet Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container top-entete mb-2">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-plus me-2"></i>Hizmet Güncelleme İşlemi </h4>
        </div>
    </div>
</div>

<div class="container formulaire mt-3">
    <form method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <label class="form-label mb-2">Hizmet Ad</label>
        <input type="text" asp-for="@Model.Name" class="form-control mb-3" placeholder="Hizmet adını Giriniz" />
        <span class="text-danger my-1" asp-validation-for="@Model.Name"></span><br />
        <label class="form-label mb-2">Açıklama</label>
        <textarea class="form-control mb-3" asp-for="@Model.Description" placeholder="Açıklama Giriniz " style="min-height:100px;"></textarea>
        <span class="text-danger my-1" asp-validation-for="@Model.Description"></span><br />
        <label class="form-label mb-2">İkon</label>
        <input type="text" asp-for="@Model.Icon" class="form-control mb-3" placeholder="Ikon Giriniz" />
        <span class="text-danger my-1" asp-validation-for="@Model.Icon"></span><br />
        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-success" type="submit">
                <i class="fa-solid fa-edit me-1"></i>
                Güncelle
            </button>
        </div>
    </form>
</div>


@model List<GetGalleryQueryResult>
@{
    ViewData["Title"] = "galery";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="container top-entete">
    <div class="d-flex justify-content-between">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-list-ul me-4"></i>Galery </h4>
        </div>
        <a href="/Admin/Gallery/Create" class="btn btn-outline-primary">
            <i class="fa-solid fa-plus me-1"></i>Yeni Fotoğraf Ekle
        </a>

    </div>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info mt-3 text-center" role="alert">
        <i class="fa-solid fa-circle-info me-3"></i>
        <strong>Bilgilendirme!</strong> Henüz Fotoğraf Yok.
    </div>
}
else
{
    <div class=" mb-3 table-responsive tableau mt-3">
        <table class="table table-stripped table-hover table-sm">
            <thead class="rounded-3 tableau-header">
                <tr>
                    <th>N°</th>
                    <th>Görsel</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var gallery in Model)
                {
                    count++;
                    <tr>
                        <th>@count</th>
                        <td><img src="@gallery.ImageUrl" style="width:80px;height:80px; border-radius:50%;" /></td>
                        <td class="text-nowrap">

                            <a href="/Admin/Gallery/Delete/@gallery.Id" class="btn btn-danger">
                                <i class="fa-solid fa-trash me-1"></i>
                                Sil
                            </a>
                            <a href="/Admin/Gallery/Update/@gallery.Id" class="btn btn-success">
                                <i class="fa-solid fa-edit me-1"></i>
                                Güncelle
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}


@model GetCategoryByIdQueryResult
@{
    ViewData["Title"] = "Update";
    ViewData["Title"] = "İletişim Güncelleme";

}
<div class="container top-entete mb-2">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-plus me-2"></i>Kategori Güncelleme İşlemi </h4>
        </div>
    </div>
</div>

<div class="container formulaire mt-3">
    <form method="post" asp-action="Update" asp-controller="Category">
        <label class="form-label">Kategori adi</label>
        <input type="text" class="form-control"  asp-for="Name"/>
        <label class="form-label">Kategori Resmi</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
        <button class="btn btn-outline-success" type="submit">Güncelle</button>
    </form>

</div>

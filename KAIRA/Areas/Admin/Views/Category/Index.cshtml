
@model List<GetCategoryQueryResult>
@{
    ViewData["Title"] = "List of Category";
}


<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Image</th>
            <th>Move To trash</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td><img src="@category.ImageUrl" style="width:50px;height:50px;border-radius:50%"/></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">Delete</a></td>
                <td><a class="btn btn-success" asp-action="Update" asp-controller="Category" asp-route-id="@category.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

